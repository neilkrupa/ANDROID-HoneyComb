<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Issue One"
        android:id="@+id/textView3"
        android:layout_marginTop="17dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Response"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="submitResponse"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/issuedesc"
        android:layout_below="@+id/issuecode"
        android:layout_alignLeft="@+id/issuecode"
        android:layout_alignStart="@+id/issuecode"
        android:layout_alignRight="@+id/listView5"
        android:layout_alignEnd="@+id/listView5"
        android:backgroundTint="#7f000000"
        android:textColor="#ffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button5"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/textView7"
        android:background="#31000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Responses:"
        android:id="@+id/textView7"
        android:textColor="#000000"
        android:layout_below="@+id/issuedesc"
        android:layout_alignLeft="@+id/issuedesc"
        android:layout_alignStart="@+id/issuedesc"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/issuecode"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/listView5"
        android:layout_alignEnd="@+id/listView5"
        android:backgroundTint="#7f000000"
        android:textColor="#ffffff" />

</RelativeLayout>