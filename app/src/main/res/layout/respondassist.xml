<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Post to Assist Forum"
        android:id="@+id/textView3"
        android:layout_marginTop="17dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:onClick="Submit"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/issuedesc"
        android:text="Description of Issue"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_marginBottom="10dp"
        android:background="#31000000"
        android:clickable="false"
        android:gravity="top"
        android:layout_margin="5dp"
        android:editable="false"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/editText8"
        android:text="Response"
        android:layout_above="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:layout_marginBottom="5dp"
        android:background="#31000000"
        android:gravity="top"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/editText13"
        android:layout_alignEnd="@+id/editText13"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/editText13"
        android:text="Response Title"
        android:background="#31000000"
        android:gravity="top"
        android:layout_above="@+id/editText8"
        android:layout_alignLeft="@+id/issuedesc"
        android:layout_alignStart="@+id/issuedesc"
        android:layout_alignRight="@+id/issuedesc"
        android:layout_alignEnd="@+id/issuedesc"
        android:textColor="#ffffff" />

</RelativeLayout>