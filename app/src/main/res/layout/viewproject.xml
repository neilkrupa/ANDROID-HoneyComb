<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Name:"
        android:id="@+id/openProject"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Leader: "
        android:id="@+id/openProjectLeader"
        android:textColor="#000000"
        android:layout_below="@+id/openProject"
        android:layout_alignLeft="@+id/openProject"
        android:layout_alignStart="@+id/openProject"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Description:"
        android:id="@+id/textView15"
        android:textColor="#000000"
        android:layout_below="@+id/openProjectLeader"
        android:layout_alignLeft="@+id/openProjectLeader"
        android:layout_alignStart="@+id/openProjectLeader"
        android:layout_marginTop="18dp" />

    <EditText
        android:layout_width="305dp"
        android:layout_height="130dp"
        android:id="@+id/openProjectDescription"
        android:nestedScrollingEnabled="true"
        android:enabled="false"
        android:editable="false"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:gravity="top"
        android:layout_below="@+id/textView15"
        android:background="#31000000" />

    <Button
        android:layout_width="28dip"
        android:layout_height="40dip"
        android:id="@+id/moreButton"
        android:background="@drawable/more"
        android:layout_alignTop="@+id/openProject"
        android:layout_alignRight="@+id/openProjectDescription"
        android:layout_alignEnd="@+id/openProjectDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team Members:"
        android:id="@+id/textView13"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/openProjectDescription"
        android:layout_alignLeft="@+id/openProjectDescription"
        android:layout_alignStart="@+id/openProjectDescription" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/userList"
        android:layout_below="@+id/textView13"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_alignRight="@+id/openProjectDescription"
        android:layout_alignEnd="@+id/openProjectDescription"
        android:background="#31000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Deadline:"
        android:id="@+id/textView14"
        android:textColor="#000000"
        android:layout_below="@+id/userList"
        android:layout_alignLeft="@+id/userList"
        android:layout_alignStart="@+id/userList"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date..."
        android:id="@+id/openProjectDeadlineDate"
        android:textColor="#18ad2c"
        android:layout_below="@+id/textView14"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="21dp"
        android:textSize="@dimen/abc_action_button_min_width_material" />

</RelativeLayout>